<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="creditmemo_totals">
            <block class="Magento\Sales\Block\Adminhtml\Order\Totals\Item" name="reward_points" template="Magento_Reward::sales/order/total.phtml">
                <action method="setBeforeCondition">
                    <argument name="condition" xsi:type="string">customerbalance</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceContainer name="submit_before">
            <block class="Magento\Reward\Block\Adminhtml\Sales\Order\Creditmemo\Reward" name="reward_points_creditmemo" template="Magento_Reward::sales/order/creditmemo/reward.phtml">
                <arguments>
                    <argument name="reward_data" xsi:type="object">Magento\Reward\Block\Adminhtml\DataProvider\Refund</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
