        <attribute code="reward_points_balance" type="float" />
        <attribute code="reward_currency_amount" type="float" />
        <attribute code="base_reward_currency_amount" type="float" />
    </extension_attributes>
    <extension_attributes for="Magento\SalesRule\Api\Data\RuleInterface">
