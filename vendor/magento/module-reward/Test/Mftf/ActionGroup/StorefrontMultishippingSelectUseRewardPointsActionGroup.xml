<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <actionGroup name="StorefrontMultishippingSelectUseRewardPointsActionGroup">
        <annotations>
            <description>Set use reward points during multishipping checkout</description>
        </annotations>
        <waitForPageLoad stepKey="waitForBillingInfoPageLoad"/>
        <click selector="{{PaymentMethodSection.useRewardPoints}}" stepKey="setUseRewardPoints"/>
    </actionGroup>
</actionGroups>
