<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="NavigateLumaVirtualGiftCardEntityTest">
        <annotations>
            <features value="GiftCardSampleData"/>
            <stories value="Sample data"/>
            <title value="Should be able to see Luma Virtual Gift Card."/>
            <description value="Should be able to see Luma Virtual Gift Card created by GiftCardSampleData module."/>
            <severity value="MAJOR"/>
            <testCaseId value="MC-11962"/>
            <group value="sampleData"/>
        </annotations>

        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPage">
            <argument name="productUrl" value="{{LumaVirtualGiftCardProductSampleData.url_key}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductNameOnProductPageActionGroup" stepKey="assertProductName">
            <argument name="productName" value="{{LumaVirtualGiftCardProductSampleData.name}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductSkuOnProductPageActionGroup" stepKey="assertProductSku">
            <argument name="productSku" value="{{LumaVirtualGiftCardProductSampleData.sku}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductImagesOnProductPageActionGroup" stepKey="assertProductImage">
            <argument name="productImage" value="{{LumaVirtualGiftCardProductSampleData.image}}" />
        </actionGroup>
    </test>
</tests>
