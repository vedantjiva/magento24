<?php $options = $block->getSelectOptions() ?>
<div class="admin__field">
    <?php if ($block->getData('label')) : ?>
        <label for="<?= $block->escapeHtmlAttr($block->getData('name')) ?>" class="admin__field-label"><span><?= $block->escapeHtml($block->getData('label')) ?></span></label>
    <?php endif; ?>
    <select data-form-part="category_form" name="<?= $block->escapeHtmlAttr($block->getData('name')) ?>" class="admin__control-select <?= $block->escapeHtmlAttr($block->getData('class')) ?>">
        <?php foreach ($options as $key => $value) : ?>
            <option value="<?= $block->escapeHtml($key) ?>" <?= ($block->getSelectValue() == $key) ? 'selected="selected"' : '' ?>><?= $block->escapeHtml($value) ?></option>
        <?php endforeach; ?>
    </select>
