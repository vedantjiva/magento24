<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminMoveProductUpInCategoryProductsGridActionGroup">
        <annotations>
            <description>Move product upper on Products in Category grid on Category edit page.</description>
        </annotations>
        <arguments>
            <argument name="productPosition" type="string"/>
        </arguments>
        <click selector="{{AdminCategoryProductsGridSection.rowPositionUp(productPosition)}}" stepKey="moveProductUp"/>
    </actionGroup>
</actionGroups>
