<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontBannerSection">
        <element name="targetImage" type="text" selector=".banner-item-content>p>img"/>
        <element name="storeViewSwitcher" type="button" selector="#switcher-language-trigger"/>
        <element name="storeViewDropdown" type="button" selector="ul.switcher-dropdown"/>
        <element name="storeViewOption" type="button" selector="li.view-{{var1}}>a" parameterized="true"/>
        <element name="ImageSource" type="text" selector="//img[contains(@src,'{{var1}}') and not(contains(@src,'{{var2}}/'))]" parameterized="true"/>
        <element name="bannerImage" type="block" selector=".banner-item-content>img"/>
    </section>
</sections>
