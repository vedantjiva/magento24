<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <support>
            <backup_items>
                <code>
                    <class>Magento\Support\Model\Backup\Item\Code</class>
                    <params>
                        <output_file_extension>tar.gz</output_file_extension>
                        <type>1</type>
                    </params>
                </code>
                <db>
                    <class>Magento\Support\Model\Backup\Item\Db</class>
                    <params>
                        <output_file_extension>sql.gz</output_file_extension>
                        <type>2</type>
                    </params>
                </db>
            </backup_items>
            <output_path>var/support/</output_path>
        </support>
    </default>
</config>
