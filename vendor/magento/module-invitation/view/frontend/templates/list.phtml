                    <tr>
                        <td data-th="<?= $block->escapeHtml(__('Email')) ?>" class="col email"><?= $block->escapeHtml($invitation->getEmail()) ?></td>
                        <td data-th="<?= $block->escapeHtml(__('Status')) ?>" class="col status"> <?= $block->escapeHtml($this->helper(\Magento\Invitation\Helper\Data::class)->getInvitationStatusText($invitation)) ?></td>
