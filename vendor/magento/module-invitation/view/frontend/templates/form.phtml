            <div class="secondary">
                <a href="<?= $block->escapeUrl($invitationHelper->getCustomerInvitationUrl()) ?>"
                   class="action back">
                    <span><?= $block->escapeHtml(__('Back to Invitations')) ?></span>
                </a>
            </div>
        </div>
