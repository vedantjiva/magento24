$item = $block->getItem();
?>
<div class="wishlist-dropdown move">
    <span class="action toggle"
          data-mage-init='{"dropdown":{}}'
          data-trigger-keypress-button="true"
          data-toggle="dropdown"
        <?php if ($block->getDefaultWishlist()->getId() != $block->getCurrentWishlist()->getId()) : ?> data-wishlist-move-item='{"itemId":"<?= $block->escapeHtmlAttr($item->getId()) ?>", "wishlistId":"<?= $block->escapeHtmlAttr($block->getDefaultWishlist()->getId()) ?>"}'<?php endif;?>>
