                    <span role="button"
                          tabindex="0"
                          data-action-keypress="true"
                          data-wishlist-move-item='{"itemId":"<?= $block->escapeHtmlAttr($item->getId()) ?>", "wishlistId":"<?= $block->escapeHtmlAttr($wishlist->getId()) ?>"}'>
                        <?= $block->escapeHtml($wishlist->getName()) ?>
                    </span>
                </li>
            <?php endif;?>
        <?php endforeach;?>
        <?php if ($block->canCreateWishlists($block->getWishlists())) : ?>
            <li class="item">
                <span role="button"
                      tabindex="0"
                      class="action new"
                      data-action-keypress="true"
                      data-wishlist-move-item='{"itemId":"<?= $block->escapeHtmlAttr($item->getId()) ?>", "new":true}'>
                    <span><?= $block->escapeHtml(__('Create New Wish List')) ?></span>
                </span>
            </li>
        <?php endif;?>
    </ul>
