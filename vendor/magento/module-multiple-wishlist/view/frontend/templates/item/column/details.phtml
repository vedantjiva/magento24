<?php
    $product = $block->getItem()->getProduct();
    $layout = $block->getLayout();
?>
<strong class="product name">
    <a href="<?= $block->escapeUrl($block->getProductUrl($block->getItem())) ?>"><?= $block->escapeHtml($product->getName()) ?></a>
</strong>
<?php if ($product->getShortDescription()) : ?>
    <div class="description">
        <?= $block->escapeHtml($block->stripTags($product->getShortDescription())) ?>
    </div>
<?php endif; ?>
<?php foreach ($block->getChildNames() as $childName) :?>
    <?= /* @noEscape */ $layout->renderElement($childName, false) ?>
<?php endforeach;?>
