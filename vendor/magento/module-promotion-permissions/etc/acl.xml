<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Magento_CatalogRule::promo">
                        <resource id="Magento_CatalogRule::promo_catalog">
                            <resource id="Magento_PromotionPermissions::edit" title="Edit Catalog Price Rules" translate="title" />
                        </resource>
                        <resource id="Magento_SalesRule::quote">
                            <resource id="Magento_PromotionPermissions::quote_edit" title="Edit Cart Price Rules" translate="title" />
                        </resource>
                    </resource>
                    <resource id="Magento_Backend::marketing_communications">
                        <resource id="Magento_Reminder::magento_reminder">
                            <resource id="Magento_PromotionPermissions::magento_reminder_edit" title="Edit Automated Email Reminder Rules" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
