<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_address_load_before">
        <observer name="magento_giftregistry" instance="Magento\GiftRegistry\Observer\AddressDataBeforeLoad" />
    </event>
    <event name="customer_address_load_after">
        <observer name="magento_giftregistry" instance="Magento\GiftRegistry\Observer\AddressDataAfterLoad" />
    </event>
    <event name="sales_quote_address_save_before">
        <observer name="magento_giftregistry" instance="Magento\GiftRegistry\Observer\AddressDataBeforeSave" />
    </event>
    <event name="sales_order_place_after">
        <observer name="magento_giftregistry" instance="Magento\GiftRegistry\Observer\OrderPlaced" />
    </event>
    <event name="catalog_product_delete_after">
        <observer name="magento_giftregistry" instance="Magento\GiftRegistry\Observer\DeleteProduct" />
    </event>
</config>
