            <td><?= $block->escapeHtml($block->getQtyFulfilled($item)) ?></td>
            <td><?= $block->escapeHtml($block->getRemainedQty($item)) ?></td>
        </tr>
        <?php $i++;
    endforeach; ?>
    </tbody>
