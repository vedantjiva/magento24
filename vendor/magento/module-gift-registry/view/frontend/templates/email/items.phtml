<table class="email-items" summary="<?= $block->escapeHtmlAttr(__('Gift Registry Items Updated')) ?>">
    <thead>
        <tr>
            <th><?= $block->escapeHtml(__('Product Name')) ?></th>
            <th><?= $block->escapeHtml(__('Requested Quantity')) ?></th>
            <th><?= $block->escapeHtml(__('Fulfilled Quantity')) ?></th>
