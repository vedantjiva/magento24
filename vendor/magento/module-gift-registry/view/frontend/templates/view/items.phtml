<?php
    $_itemsCount = count($block->getItems());
?>
<div class="block block-giftregistry-shared-items">
    <div class="block-title"><strong><?= $block->escapeHtml(__('Gift Registry Items')) ?></strong></div>
    <div class="block-content">
        <?php if (!$_itemsCount) :?>
            <div class="message info empty"><span><?= $block->escapeHtml(__('This gift registry has no items.')) ?></span></div>
        <?php else :?>
            <form action="<?= $block->escapeUrl($block->getActionUrl()) ?>" method="post" class="form giftregistry">
                <div class="table-wrapper">
                    <table id="shopping-cart-table" class="data table giftregistry">
                        <caption class="table-caption"><?= $block->escapeHtml(__('Gift Registry Items')) ?></caption>
                        <thead>
                        <tr>
                            <th class="col product" scope="col"><?= $block->escapeHtml(__('Product Name')) ?></th>
                            <th class="col registered" scope="col"><?= $block->escapeHtml(__('Requested')) ?></th>
                            <th class="col fulfilled" scope="col"><?= $block->escapeHtml(__('Fulfilled')) ?></th>
                            <th class="col remaining" scope="col"><?= $block->escapeHtml(__('Remaining')) ?></th>
                            <th class="col price" scope="col"><?= $block->escapeHtml(__('Unit Price')) ?></th>
                            <th class="col qty" scope="col"><?= $block->escapeHtml(__('Qty')) ?></th>
                        </tr>
                        </thead>
                        <?php foreach ($block->getItems() as $_item) :?>
                            <tbody class="item">
                                <?= $block->getItemHtml($_item) ?>
                            </tbody>
                        <?php endforeach ?>
                    </table>
                </div>
                <div class="actions-toolbar">
                    <div class="primary">
                        <button type="submit"
                                title="<?= $block->escapeHtmlAttr(__('Add to Cart')) ?>"
                                class="action primary"><span><?= $block->escapeHtml(__('Add to Cart')) ?></span></button>
                    </div>
                </div>
            </form>
        <?php endif; ?>
    </div>
</div>
