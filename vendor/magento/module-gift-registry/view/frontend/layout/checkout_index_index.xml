<!-- TODO remove this file as soon as enhanced checkout is implemented -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="gift-registry-address-provider" xsi:type="array">
                                                    <item name="component" xsi:type="string">Magento_GiftRegistry/js/view/shipping-address/gift-registry</item>
                                                </item>
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="address-list" xsi:type="array">
                                                            <item name="config" xsi:type="array">
                                                                <item name="deps" xsi:type="string">checkout.steps.shipping-step.gift-registry-address-provider</item>
                                                            </item>
                                                            <item name="rendererTemplates" xsi:type="array">
                                                                <item name="gift-registry" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magento_GiftRegistry/js/view/shipping-address/address-renderer/gift-registry</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-information" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="ship-to" xsi:type="array">
                                                    <item name="rendererTemplates" xsi:type="array">
                                                        <item name="gift-registry" xsi:type="array">
                                                            <item name="component" xsi:type="string">uiComponent</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Magento_GiftRegistry/shipping-information/address-renderer/gift-registry</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
