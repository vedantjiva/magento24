<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="customer_account_navigation">
            <action method="setActive">
                <argument name="path" xsi:type="string">magento_giftregistry/index/index</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-giftregistry-link">
            <arguments>
                <argument name="is_highlighted" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\GiftRegistry\Block\Customer\Edit" name="giftregistry_addselect" template="Magento_GiftRegistry::edit/addselect.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
