<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Magento\GiftRegistry\Block\Cart\Link" name="giftregistry.cart.link" template="Magento_GiftRegistry::cart/link.phtml"/>
        </referenceContainer>
        <referenceBlock name="additional.product.info">
            <block class="Magento\GiftRegistry\Block\Cart\Product\Mark" name="giftregistry.product.mark" template="Magento_GiftRegistry::cart/product/mark.phtml"/>
        </referenceBlock>
    </body>
</page>
