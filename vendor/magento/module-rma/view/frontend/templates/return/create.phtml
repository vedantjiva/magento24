<script id="template-registrant" type="text/x-magento-template">
    <div class="actions-toolbar">
        <div class="secondary" id="delete<%- data._index_ %>">
            <button type="button" class="action remove delete">
                <span><?= $block->escapeHtml(__('Remove')) ?></span>
            </button>
        </div>
    </div>
    <fieldset class="fieldset">
        <div class="field item required">
            <label for="items:item<%- data._index_ %>" class="label">
                <span><?= $block->escapeHtml(__('Item')) ?></span>
            </label>
            <div class="control">
                <?php $bundleID     = 0; ?>
                <?php $firstItemId = $i = $productType = $availableQty = $shipmentType = 0; ?>
                <?php $html         = []; ?>
                <select name="items[<%- data._index_ %>][order_item_id]"
                        class="select"
                        id="items:item<%- data._index_ %>"
                        data-args='{"index":<%- data._index_ %>}'>
                    <?php foreach ($_items as $_item): ?>
                        <?php $totalAvlQty += $block->getAvailableQty($_item); ?>
                        <?php if ($i == 0): ?>
                            <?php
                            $firstItemId = $_item->getId();
                            $productType = $_item->getProductType();
                            $shipmentType = $_item->getProduct()->getShipmentType();
                            $availableQty = $block->getAvailableQty($_item);
                            $i = 1;
                            ?>
                        <?php endif; ?>
                        <?php if ($_item->getProductType() == \Magento\Catalog\Model\Product\Type::TYPE_BUNDLE): ?>
                            <?php $bundleID = $_item->getId(); ?>
                        <?php endif; ?>
                        <?php if (!$_item->getParentItemId() || $_item->getParentItemId() != $bundleID): ?>
                            <?php $optionRel = $block->escapeHtmlAttr($_item->getProductType()) . '_'
                                . $block->escapeHtmlAttr($block->getAvailableQty($_item)) . '_'
                                . $block->escapeHtmlAttr($_item->getProduct()->getShipmentType());
                            ?>
                            <option value="<?= (int) $_item->getId() ?>"
                                    id="item:order_item_id<%- data._index_ %>_<?= (int) $_item->getId() ?>"
                                    rel="<?= /* @noEscape */ $optionRel ?>">
                                <?= $block->escapeHtml($_item->getName()) ?>
                            </option>
                        <?php endif; ?>
                        <?php if ($_item->getParentItemId() != null && $_item->getParentItemId() == $bundleID): ?>
                            <?php if ($_item->getIsOrdered()): ?>
                                <?php
                                $html[$bundleID][] = [
                                    $_item->getId(),
                                    $block->escapeHtml($_item->getName()),
                                    $block->getAvailableQty($_item),
                                    1,
                                ];
                                ?>
                            <?php else: ?>
                                <?php
                                $html[$bundleID][] = [
                                    $_item->getId(),
                                    $block->escapeHtml($_item->getName()),
                                    $block->getAvailableQty($_item),
                                    0,
                                ];
                                ?>
                            <?php endif; ?>
                        <?php endif; ?>
                    <?php endforeach; ?>
                </select>
            <?php if (!empty($html)): ?>
                <?php foreach ($html as $bundleID => $node): ?>
                    <div class="nested">
                        <div id="radio:item<%- data._index_ %>_<?= (int) $bundleID ?>">
                            <div class="table-wrapper">
                                <table class="data table table-return-items"
                                       id="return-items-table-<?= (int) $bundleID ?>">
                                    <caption class="table-caption">
                                        <?= $block->escapeHtml(__('Return items')) ?>
                                    </caption>
                                    <thead>
                                        <tr>
                                            <th class="col product" scope="col">
                                                <?= $block->escapeHtml(__('Sub-items')) ?>
                                            </th>
                                            <th class="col remaining qty" scope="col">
                                                <?= $block->escapeHtml(__('Remaining Qty')) ?>
                                            </th>
                                            <th class="col qty" scope="col">
                                                <?= $block->escapeHtml(__('Qty')) ?>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <?php foreach ($node as $item): ?>
                                        <tr>
                                            <td data-th="<?= $block->escapeHtmlAttr(__('Product')) ?>"
                                                class="col product">
                                                <?php if ($item[3]): ?>
                                                    <input type="checkbox" disabled>
                                                <?php else: ?>
                                                    <?php
                                                        $inputId = 'items[<%- data._index_ %>][' . (int) $bundleID
                                                            . '][checkbox][item][' . $block->escapeHtmlAttr($item[0])
                                                            . ']';
                                                        $inputName = 'validate-one-checkbox-' . (int) $bundleID
                                                            . '-<%- data._index_ %>';
                                                    ?>
                                                    <input id="<?= /* @noEscape */ $inputId ?>"
                                                           data-validate="{'validate-one-required-by-name':true}"
                                                           data-args='{
                                                                "item" :<?= $block->escapeHtmlAttr($item[0]) ?>,
                                                                "bundleId" : <?= (int) $bundleID ?>,
                                                                "index" :<%- data._index_ %>
                                                            }'
                                                           type="checkbox"
                                                           value="<?= $block->escapeHtmlAttr($item[0]) ?>"
                                                           class="checkbox change-container-classname"
                                                           name="<?= /* @noEscape */ $inputName ?>" />
                                                <?php endif; ?>
                                                <label for="<?= /* @noEscape */ $inputId ?>"
                                                       class="label <?= ($item[3]) ? 'disabled' : ''?>">
                                                    <?= $block->escapeHtmlAttr($item[1]) ?>
                                                </label>
                                            </td>
                                            <td data-th="<?= $block->escapeHtmlAttr(__('Remaining Qty')) ?>"
                                                class="col remaining qty">
                                                <?= $block->escapeHtml($item[2]) ?>
                                            </td>
                                            <td data-th="<?= $block->escapeHtmlAttr(__('Qty')) ?>" class="col qty">
                                                <?php if (!$item[3]): ?>
                                                    <?php
                                                        $inputId = 'items[<%- data._index_ %>]['
                                                            . (int) $bundleID . '][checkbox][qty]['
                                                            . $block->escapeHtmlAttr($item[0]) . ']';
                                                        $inputName = 'items[<%- data._index_ %>][items]['
                                                            . $block->escapeHtmlAttr($item[0]) . ']';
                                                    ?>
                                                    <input id="<?= /* @noEscape */ $inputId ?>"
                                                           name="<?= /* @noEscape */ $inputName ?>"
                                                           size="7"
                                                           data-validate="{
                                                                'validate-greater-than-zero':true,
                                                                'required-number':true
                                                            }"
                                                           type="number"
                                                           disabled
                                                           class="input-qty input-text">
                                                <?php endif; ?>
                                            </td>
                                        </tr>
                                    <?php endforeach; ?>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <?php endforeach; ?>
            <?php endif; ?>
            </div>
        </div>
        <div class="field qty required" id="qty_requested_block_<%- data._index_ %>">
            <label for="items:qty_requested<%- data._index_ %>" class="label">
                <span><?= $block->escapeHtml(__('Quantity To Return')) ?></span>
            </label>
            <div class="control">
                <input type="number"
                       class="input-text"
                       data-validate="{'validate-greater-than-zero':true,'required-number':true}"
                       value=""
                       name="items[<%- data._index_ %>][qty_requested]"
                       id="items:qty_requested<%- data._index_ %>">
                <div class="note" id="remaining_quantity_block_<%- data._index_ %>">
                    <?= $block->escapeHtml(__('Remaining Quantity:')) ?>&nbsp;
                    <span id="remaining_quantity_<%- data._index_ %>" class="qty remaining"></span>
                </div>
            </div>

        </div>

        <?php foreach ($block->getAttributes() as $attribute): ?>
            <?php $attributeContent = $block->getAttributeHtml($attribute);?>
            <?php if ($attributeContent): ?>
                <?= /* @noEscape */ $attributeContent ?>
            <?php endif;?>
        <?php endforeach;?>
    </fieldset>
</script>

