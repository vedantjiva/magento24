<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">cmsstaging_block_update_select_grid.cmsstaging_block_update_select_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>columns</spinner>
        <deps>
            <dep>cmsstaging_block_update_select_grid.cmsstaging_block_update_select_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="cmsstaging_block_update_select_grid_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_Cms::block</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="cmsstaging_block_update_select_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <container name="listing_top" template="Magento_Staging/grid/toolbar">
        <container name="columns_controls" component="Magento_Ui/js/grid/controls/columns" displayArea="dataGridActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">cmsstaging_block_update_select_grid.cmsstaging_block_update_select_grid.columns</item>
                    </item>
                </item>
            </argument>
        </container>
        <filterSearch name="fulltext" provider="cmsstaging_block_update_select_grid.cmsstaging_block_update_select_grid_data_source">
            <settings>
                <chipsProvider>cmsstaging_block_update_select_grid.cmsstaging_block_update_select_grid.listing_top.listing_filters_chips</chipsProvider>
            </settings>
        </filterSearch>
        <paging name="listing_paging" component="Magento_Staging/js/grid/paging/paging" displayArea="bottom">
            <settings>
                <options>
                    <option name="200" xsi:type="array">
                        <item name="value" xsi:type="number">200</item>
                        <item name="label" xsi:type="string" translate="true">200</item>
                    </option>
                    <option name="100" xsi:type="array">
                        <item name="value" xsi:type="number">100</item>
                        <item name="label" xsi:type="string" translate="true">100</item>
                    </option>
                    <option name="50" xsi:type="array">
                        <item name="value" xsi:type="number">50</item>
                        <item name="label" xsi:type="string" translate="true">50</item>
                    </option>
                    <option name="30" xsi:type="array">
                        <item name="value" xsi:type="number">30</item>
                        <item name="label" xsi:type="string" translate="true">30</item>
                    </option>
                    <option name="20" xsi:type="array">
                        <item name="value" xsi:type="number">20</item>
                        <item name="label" xsi:type="string" translate="true">20</item>
                    </option>
                </options>
                <selectProvider>cmsstaging_block_update_select_grid.cmsstaging_block_update_select_grid.columns.ids</selectProvider>
            </settings>
        </paging>
    </container>
    <columns name="columns" template="Magento_Staging/grid/listing-disabled">
        <settings>
            <childDefaults>
                <param name="clickAction" xsi:type="string">view</param>
                <param name="actionField" xsi:type="string">actions</param>
                <param name="controlVisibility" xsi:type="boolean">true</param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" component="Magento_Staging/js/grid/columns/singleselect" sortOrder="10">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="name">
            <argument name="data" xsi:type="array">
                <item name="js_config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
                </item>
                <item name="config" xsi:type="array">
                    <item name="align" xsi:type="string">left</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Update Name</label>
            </settings>
        </column>
        <column name="start_time" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>MMM d, y h:mm a</dateFormat>
                <label translate="true">Start Time</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="end_time" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>MMM d, y h:mm a</dateFormat>
                <label translate="true">End Time</label>
            </settings>
        </column>
    </columns>
</listing>
