<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminLogsReportSelectSortByAscActionGroup">
        <annotations>
            <description>Selects asc sorting if it is not set.</description>
        </annotations>
        <conditionalClick selector="{{AdminActionLogReportGridSection.timeColumn}}[data-direction='desc']"
                          dependentSelector="{{AdminActionLogReportGridSection.timeColumn}}[data-direction='desc']"
                          visible="true" stepKey="sortByAsc"/>
    </actionGroup>
</actionGroups>
