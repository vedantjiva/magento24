<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="CheckoutBillingAddressSearchSection">
        <element name="searchAddressField" type="input" selector="//input[@data-role='advanced-select-text']"/>
        <element name="searchAddressButton" type="button" selector=".action.search" timeout="10"/>
        <element name="addressesFound" type="text" selector="//div[@data-bind='text: itemsQuantity']"/>
        <element name="firstBillingAddressItem" type="text" selector="//li[contains(@class,'admin__action-multiselect-menu-inner-item')][1]"/>
        <element name="exactBillingAddressItem" type="text" selector="//li[contains(@class,'admin__action-multiselect-menu-inner-item')][{{var1}}]" parameterized="true"/>
        <element name="billingAddressItems" type="text" selector="//li[contains(@class,'admin__action-multiselect-menu-inner-item')]"/>
        <element name="defaultAddressButton" type="text" selector="//li[contains(@class,'admin__action-multiselect-menu-inner-item') and //span[contains(text(),'{{var1}}')]]//span[text()='Default']" parameterized="true"/>
        <element name="selectedAddressButton" type="text" selector="//li[contains(@class,'admin__action-multiselect-menu-inner-item') and //span[contains(text(),'{{var1}}')]]//span[text()='Selected']" parameterized="true"/>
        <element name="billingAddressItem" type="text" selector="//li[contains(@class,'admin__action-multiselect-menu-inner-item')]"/>
        <element name="selectButton" type="button" selector="//li[@class='admin__action-multiselect-menu-inner-item _root' and //span[contains(text(),'{{var1}}')]]//span[text()='Select']" parameterized="true" timeout="10"/>
        <element name="editNewAddressButton" type="button" selector="//li[@class='admin__action-multiselect-menu-inner-item _root' and //span[contains(text(),'{{var1}}')]]//span[contains(text(), 'Edit')]" parameterized="true"/>
        <element name="closeSelectBillingAddressModal" type="button" selector="//button[@class='action-close' and //span[text()='Close']]"/>
    </section>
</sections>
