<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="customerbalance.wrapper" template="Magento_CustomerBalance::account/wrapper.phtml">
                <block class="Magento\CustomerBalance\Block\Account\Balance" name="balance" template="Magento_CustomerBalance::account/balance.phtml" before="-" cacheable="false"/>
                <block class="Magento\CustomerBalance\Block\Account\History" name="history" template="Magento_CustomerBalance::account/history.phtml" after="-" cacheable="false"/>
            </block>
        </referenceContainer>
    </body>
</page>
