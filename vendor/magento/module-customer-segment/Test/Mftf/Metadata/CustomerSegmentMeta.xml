<operations xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:DataGenerator/etc/dataOperation.xsd">
    <operation name="createCustomerSegment" dataType="customerSegment"
               type="create" auth="adminFormKey" url="customersegment/index/save/active_tab/general_section/" method="POST">
        <contentType>application/x-www-form-urlencoded</contentType>
        <field key="name">string</field>
        <field key="description">string</field>
        <field key="is_active">string</field>
        <array key="website_ids">
            <value>integer</value>
        </array>
        <field key="apply_to">string</field>
    </operation>
</operations>
