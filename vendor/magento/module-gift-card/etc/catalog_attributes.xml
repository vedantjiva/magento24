        <attribute name="giftcard_type"/>
        <attribute name="giftcard_amounts"/>
        <attribute name="allow_open_amount"/>
        <attribute name="open_amount_min"/>
        <attribute name="open_amount_max"/>
        <attribute name="use_config_lifetime"/>
        <attribute name="lifetime"/>
        <attribute name="use_config_is_redeemable"/>
