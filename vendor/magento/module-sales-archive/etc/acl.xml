<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Magento_SalesArchive::archive" title="Archive" translate="title" sortOrder="20">
                        <resource id="Magento_SalesArchive::orders"  title="Orders" translate="title" sortOrder="10">
                            <resource id="Magento_SalesArchive::add" title="Move to Archive" translate="title" />
                            <resource id="Magento_SalesArchive::remove" title="Restore from Archive" translate="title" />
                        </resource>
                        <resource id="Magento_SalesArchive::invoices" title="Invoices" translate="title" sortOrder="20" />
                        <resource id="Magento_SalesArchive::shipments" title="Shipments" translate="title" sortOrder="30" />
                        <resource id="Magento_SalesArchive::creditmemos" title="Credit Memos" translate="title" sortOrder="40" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
