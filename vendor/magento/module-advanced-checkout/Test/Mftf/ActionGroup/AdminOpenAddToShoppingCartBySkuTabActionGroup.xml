<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminOpenAddToShoppingCartBySkuTabActionGroup">
        <annotations>
            <description>Expands the Add to Shopping Cart by SKU tab</description>
        </annotations>
        <scrollTo selector="{{AdminManageShoppingCartSection.addToShoppingCartBySkuTab}}" stepKey="scrollToTab"/>
        <conditionalClick selector="{{AdminManageShoppingCartSection.addToShoppingCartBySkuTab}}" dependentSelector="{{AdminManageShoppingCartSection.addToShoppingCartBySkuForm}}" visible="false" stepKey="openAddToShoppingCartBySkuTab"/>
    </actionGroup>
</actionGroups>
