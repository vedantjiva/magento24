<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontWidgetOrderBySKUSection">
        <element name="sku" type="text" selector="input[name='items[{{index}}][sku]']" parameterized="true"/>
        <element name="qty" type="input" selector="input[name='items[{{index}}][qty]']" parameterized="true"/>
        <element name="addItem" type="button" selector="//*[contains(@class,'block-addbysku')]//button[contains(@class,'add')]"/>
        <element name="addToCart" type="button" selector="//*[contains(@class,'block-addbysku')]//button[contains(@class,'tocart')]"/>
    </section>
</sections>
